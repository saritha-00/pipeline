pipeline 
{
    agent any
    
    stages 
    {
        stage('Checkout') 
        {
            steps 
            {
                checkout scm
            }
        }

        stage('Build Docker Image') 
        {
            steps 
            {
                script 
                {
                    // Build the Docker image
                    sh 'docker build -t sladella91/helloworld helloworld'
                    sh 'docker build -t sladella91/nicejob nicejob'
                }
            }
        }

        stage('Push to Docker Hub') 
        {
            steps 
            {
                script 
                {
                    withCredentials([usernamePassword(credentialsId: 'key', passwordVariable: 'DOCKERHUB_PASSWORD', usernameVariable: 'DOCKERHUB_USERNAME')]) {
                        // Login to Docker Hub
                        sh "docker login -u $DOCKERHUB_USERNAME -p $DOCKERHUB_PASSWORD"
                        
                        // Push the Docker image to Docker Hub
                        sh 'docker push sladella91/helloworld'
                        sh 'docker push sladella91/nicejob'
            
                    }
                }
            }
        }

          stage('Deploy to EC2 instance') {
            steps {
                script {
                    sshagent(credentials: ['host-key']) {
                        sh '''
                        ssh -o StrictHostKeyChecking=no ec2-user@44.211.64.121 "sudo docker pull sladella91/helloworld && sudo docker run -d -p 3000:3000 sladella91/helloworld"
                        ssh -o StrictHostKeyChecking=no ec2-user@44.211.64.121 "sudo docker pull sladella91/nicejob && sudo docker run -d -p 5000:5000 sladella91/nicejob"
                        '''
                    }      
                }   
            }              
        }

    }
}
